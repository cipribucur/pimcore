{% extends 'layouts/layout.html.twig' %}


{% block content %}

    <div id="main-content" class="main-content mb-5">

        <div class="page-header">
            <h1>{{ snowboard.title }}</h1>
        </div>

        <div class="display-6">
            {{ snowboard.description }}
        </div>

        <div class="row">
            {{ snowboard.image.thumbnail('image').getHTML({class: 'img-thumbnail1 img-fluid'})|raw }}
        </div>
        <span>
            Geolocation: {{ snowboard.geolocation }}
        </span>
        {% if snowboard.tags %}
            <br>
            <span>
                <span>Tags:</span>
                <ul>
                    {% for tag in snowboard.tags %}
                        <li>{{ tag }} </li>
                    {% endfor %}
                </ul>
            </span>
        {% endif %}

    </div>

{% endblock %}